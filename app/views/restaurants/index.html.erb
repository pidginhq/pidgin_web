<div class="div div_search_results_header">
	<%= form_tag(restaurants_path, method: :get, class: 'form_re_search_restaurant') do %>
		<div class="div re_search_restaurant_fields">
  			<%= text_field_tag :restaurant_name, params[:restaurant_name], :placeholder => "Search Again!", class: "txt_re_search_restaurants"%>
  			<%=submit_tag 'Find Food!', class: "btn_re_search_restaurants" %>
  		</div>
	<% end %>		
</div>
<h1>
	<div class="div_search_restaurants_results">
		<!--Restaurant search results-->
		<%@restaurant_search_results.each do |res|%>
			<a href="#" class="search_restaurant_result">
				<!--Header-->
				<div class="div result_restaurant_header">
					<span class="res_name"><%=res.restaurant_name%></span>
					<span class="res_food_genre"><%=res.price%></span>
				</div>
				<div class="div result_restaurant_info">
					<span class="res_food_type"><%=res.restaurant_food_genre%></span>
				</div>
			</a>
		<%end%>
	</div>
</h1>